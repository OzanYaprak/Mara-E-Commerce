@model Slide

<main class="page-content">
    <h6 class="mb-0 text-center text-uppercase">Slayt Düzenle</h6>
    <br />
    <div class="container mt-5">
        <div class="row justify-content-center text-center">
            <div class="col-4">
                <form asp-controller="Slide" asp-action="Update" method="post" enctype="multipart/form-data">
                    <input asp-for="ID" type="hidden" />
                    <input asp-for="SlidePicture" type="hidden" />
                    <div class="mb-3">
                        <label asp-for="SlideTitle" class="form-label fw-bold"></label>
                        <input asp-for="SlideTitle" class="form-control">
                        <span class="text-danger fw-bold" asp-validation-for="SlideTitle"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="SlideDescription" class="form-label fw-bold"></label>
                        <input asp-for="SlideDescription" class="form-control">
                        <span class="text-danger fw-bold" asp-validation-for="SlideDescription"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="SlidePrice" class="form-label fw-bold"></label>
                        <input asp-for="SlidePrice" class="form-control">
                        <span class="text-danger fw-bold" asp-validation-for="SlidePrice"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="SlidePicture" class="form-label fw-bold"></label>
                        <input asp-for="SlidePicture" type="file" accept="image/*" class="form-control">
                        <span class="text-danger fw-bold" asp-validation-for="SlidePicture"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="SlideLink" class="form-label fw-bold"></label>
                        <input asp-for="SlideLink" class="form-control">
                        <span class="text-danger fw-bold" asp-validation-for="SlideLink"></span>
                    </div>
                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-primary">Güncelle</button>
                        <a asp-controller="Slide" asp-action="Index" class="btn btn-danger">İptal</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</main>
