@model Category

<main class="page-content">
    <h6 class="mb-0 text-center text-uppercase">Kategori Düzenle</h6>
    <br />
    <div class="container mt-5">
        <div class="row justify-content-center text-center">
            <div class="col-4">
                <form asp-controller="Category" asp-action="Update" method="post">
                    <input asp-for="@Model.ID" type="hidden" />
                    <div class="mb-3">
                        <label asp-for="CategoryName" class="form-label fw-bold"></label>
                        <input asp-for="CategoryName" class="form-control">
                    </div>

                    <div class="mb-3">
                        <label asp-for="ParentID" class="form-label fw-bold"></label>
                        <select asp-for="ParentID" asp-items="@ViewBag.Categories" class="form-control">
                            <option value="0">Üst Kategori Seçiniz</option>
                        </select>
                    </div>

                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-primary">Güncelle</button>
                        <a asp-controller="Category" asp-action="Index" class="btn btn-danger">İptal</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</main>
