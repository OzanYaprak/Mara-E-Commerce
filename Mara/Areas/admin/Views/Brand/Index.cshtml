@model IEnumerable<Brand>


<main class="page-content">
    <h6 class="mb-0 text-center text-uppercase">Marka Yönetimi</h6>
    <div class="row">
        <div class="col-12">
            <div class="d-flex align-items-center gap-2 justify-content-end mb-3">
                <button class="btn btn-sm btn-light px-2"><i class="bi bi-box-arrow-right me-2"></i>Export</button>
                <a asp-controller="Brand" asp-action="Create" class="btn btn-sm btn-primary px-2"><i class="bi bi-plus-lg me-2"></i>Yeni Ekle</a>
            </div>
        </div>
    </div>
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <div class="table-responsive">
                    <table id="example2" class="table table-striped table-bordered">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Marka Adı</th>
                            </tr>
                        </thead>

                        <tbody>
                            @foreach (Brand brand in Model)
                            {
                                <tr>
                                    <td>@brand.ID</td>
                                    <td>@brand.BrandName</td>
                                </tr>
                            }
                        </tbody>

                    </table>
                </div>
            </div>
        </div>
    </div>

</main>
<!--end main content-->