@model Brand

<main class="page-content">
    <h6 class="mb-0 text-center text-uppercase">Marka Düzenle</h6>
    <br />
    <div class="container mt-5">
        <div class="row justify-content-center text-center">
            <div class="col-4">
                <form asp-controller="Brand" asp-action="Update" method="post">
                    <input asp-for="@Model.ID" type="hidden" />
                    <div class="mb-3">
                        <label asp-for="BrandName" class="form-label fw-bold"></label>
                        <input asp-for="BrandName" class="form-control">
                    </div>
                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-primary">Güncelle</button>
                        <a asp-controller="Brand" asp-action="Index" class="btn btn-danger">İptal</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</main>
